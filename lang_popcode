<!-- Language Selection Popup -->
<div class="lang-popup-overlay" id="langPopupCustom123">
  <div class="lang-popup-box">
    <h2>Continue in...</h2>
    <button class="lang-btn-en" onclick="langClosePopup123()">English</button>
    <button class="lang-btn-hi" onclick="langRedirectToHindi123()">Hindi</button>
  </div>
</div>

<script>
  window.addEventListener("load", function() {
    setTimeout(function() {
      var popup = document.getElementById("langPopupCustom123");
      if (popup) popup.style.display = "flex";
    }, 5000);
  });

  function langClosePopup123() {
    var popup = document.getElementById("langPopupCustom123");
    if (popup) popup.style.display = "none";
  }

  function langRedirectToHindi123() {
    window.location.href = "https://www.hindi.com";
  }
</script>


